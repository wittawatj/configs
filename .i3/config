# WJ: border style
for_window [class="^.*"] border pixel 2

focus_follows_mouse no


# Pulse Audio controls
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 2+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 2- unmute"
bindsym XF86AudioMute exec "amixer -q sset Master,0 toggle"
bindsym XF86MonBrightnessDown exec "sudo ~/script/addbacklight.sh -400"
bindsym XF86MonBrightnessUp exec "sudo ~/script/addbacklight.sh 400"

